{
  "name": "llm-core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/llm-core/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/llm-core",
        "main": "libs/llm-core/src/index.ts",
        "tsConfig": "libs/llm-core/tsconfig.lib.json",
        "assets": ["libs/llm-core/*.md"]
      }
    },
    "test": {
      "executor": "@nx/vitest:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../coverage/libs/agent-lib"
      }
    }
  }
}
