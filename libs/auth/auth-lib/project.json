{
  "name": "auth-lib",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/auth/auth-lib/src",
  "projectType": "library",
  "tags": [],
  "// targets": "to see all targets run: nx show project auth-lib --web",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/auth/auth-lib",
        "main": "libs/auth/auth-lib/src/index.ts",
        "tsConfig": "libs/auth/auth-lib/tsconfig.lib.json",
        "assets": ["libs/auth/auth-lib/*.md"]
      },
      "dependsOn": ["auth-db:build"]
    },
    "test": {
      "executor": "@nx/vite:test"
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "auth-lib:build",
        "runBuildTargetDependencies": false,
        "watch": true,
        "inspect": true,
        "port": 3000
      }
    }
  }
}
