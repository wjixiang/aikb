{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolvePackageJsonExports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "chunking": ["./libs/chunking/src/index.ts"],
      "@aikb/pdf-converter": ["./libs/pdf-converter/src/index.ts"],
      "@aikb/pdf-splitter": ["./libs/pdf-splitter/src/index.ts"],
      "@aikb/rabbitmq": ["./libs/rabbitmq/src/index.ts"],
      "@aikb/s3-service": ["./libs/s3-service/src/index.ts"],
      "@aikb/pdf-part-tracker": ["libs/pdf-part-tracker/src/index.ts"],
      "@aikb/markdown-part-cache": ["libs/markdown-part-cache/src/index.ts"],
      "markdown-storage-worker": [
        "apps/pdf-process/markdown-storage-worker/src/index.ts"
      ],
      "chunk-embed": ["apps/pdf-process/chunk-embed/src/index.ts"],
      "item-chunk-embed-service": [
        "apps/pdf-process/item-chunk-embed-service/src/index.ts"
      ],
      "library-item-chunkembed-storage": [
        "libs/library-item-chunkembed-storage/src/index.ts"
      ],
      "utils": ["libs/utils/src/index.ts"],
      "library-shared": ["libs/library-shared/src/index.ts"],
      "components": ["libs/components/src/index.ts"],
      "components/server": ["libs/components/src/server.ts"],
      "quiz-shared": ["libs/quiz-shared/src/index.ts"],
      "quiz-management-client": ["apps/quiz-management-client/src/index.ts"],
      "pdf2md-lib": ["libs/pdf2md-lib/src/index.ts"],
      "mineru-client": ["libs/mineru-client/src/index.ts"],
      "rabbitmq-lib": ["libs/rabbitmq-lib/src/index.ts"],
      "proto-ts": ["protos/proto-ts/src/index.ts"],
      "item-vector-storage": ["libs/item-vector-storage/src/index.ts"],
      "embedding": ["libs/embedding/src/index.ts"],
      "bibliography": ["libs/bibliography/src/index.ts"],
      "bibliography-db": ["libs/bibliography-db/src/index.ts"],
      "log-management": ["libs/log-management/src/index.ts"],
      "prisma-plugin": ["plugins/prisma-plugin/src/index.ts"],
      "auth": ["libs/auth-db/src/index.ts"],
      "auth-db": ["libs/auth/auth-db/src/index.ts"],
      "auth-lib": ["libs/auth/auth-lib/src/index.ts"],
      "ui": ["libs/ui/src/index.ts"],
      "ui/*": ["libs/ui/src/*"],
      "ui/components/*": ["libs/ui/src/components/ui/*"],
      "ui/libs/*": ["libs/ui/src/lib/*"],
      "libs/lib/utils": ["libs/ui/src/lib/utils"]
    },
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "types": ["vitest/globals"]
  },
  "exclude": ["apps/web-frontend", "./node_modules", "dist"]
}
