# Use the base Node.js image with correct version
FROM ubuntu:latest
ENV UV_HTTP_TIMEOUT=10000

# Install system dependencies
RUN apt-get update && \
    apt-get install -y \
    build-essential \
    pipx \
    nodejs \
    npm \
    git \
    python3 \
    make \
    g++ \
    python3-dev \
    wget \
    curl \
    && npm install -g pnpm \
    && pipx install uv \
    && pipx ensurepath

# RUN uv pip install -U crawl4ai
# RUN uv run crawl4ai-setup

# Build the application
# RUN pnpm build

# Expose the application port
EXPOSE 3000
EXPOSE 8000

# Default command
CMD ["pnpm", "start:dev"]