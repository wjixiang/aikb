{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "master",
  "plugins": [
    {
      "plugin": "@nx/js/typescript",
      "options": {
        "typecheck": {
          "targetName": "typecheck"
        },
        "build": {
          "targetName": "build",
          "configName": "tsconfig.lib.json",
          "buildDepsName": "build-deps",
          "watchDepsName": "watch-deps"
        }
      },
      "exclude": [
        "libs/pdf2md-lib/*",
        "libs/rabbitmq-lib/*",
        "libs/rabbitmqPublist/*",
        "libs/nestjs/nestgRPCClient/*",
        "libs/nestjs/nestjs_gRPC_client/*",
        "apps/knowledgeBase/knowledgeBase-lib/*",
        "libs/knowledgeBase/knowledgeBase-lib/*",
        "libs/meSH-client/*",
        "libs/EmbeddingModule/*"
      ]
    },
    {
      "plugin": "@nx/vite/plugin",
      "options": {
        "buildTargetName": "build",
        "testTargetName": "vite:test",
        "serveTargetName": "serve",
        "devTargetName": "dev",
        "previewTargetName": "preview",
        "serveStaticTargetName": "serve-static",
        "typecheckTargetName": "vite:typecheck",
        "buildDepsTargetName": "build-deps",
        "watchDepsTargetName": "watch-deps"
      }
    },
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "eslint:lint"
      }
    },
    {
      "plugin": "@nx/webpack/plugin",
      "options": {
        "buildTargetName": "build",
        "serveTargetName": "serve",
        "previewTargetName": "preview",
        "buildDepsTargetName": "build-deps",
        "watchDepsTargetName": "watch-deps",
        "serveStaticTargetName": "serve-static"
      }
    },
    {
      "plugin": "@nx/next/plugin",
      "options": {
        "startTargetName": "start",
        "buildTargetName": "build",
        "devTargetName": "dev",
        "serveStaticTargetName": "serve-static",
        "buildDepsTargetName": "build-deps",
        "watchDepsTargetName": "watch-deps"
      }
    },
    {
      "plugin": "@nx/js/typescript",
      "include": [
        "libs/pdf2md-lib/*",
        "libs/rabbitmq-lib/*",
        "libs/rabbitmqPublist/*",
        "libs/nestjs/nestgRPCClient/*",
        "libs/nestjs/nestjs_gRPC_client/*",
        "libs/auth/auth-lib/*",
        "apps/knowledgeBase/knowledgeBase-lib/*",
        "libs/knowledgeBase/knowledgeBase-lib/*",
        "libs/meSH-client/*",
        "libs/EmbeddingModule/*"
      ],
      "options": {
        "typecheck": {
          "targetName": "typecheck"
        }
      }
    },
    {
      "plugin": "@nx/jest/plugin",
      "options": {
        "targetName": "test"
      },
      "exclude": [
        "apps/libraryItemVectorService-e2e/**/*",
        "apps/auth-service-e2e/**/*",
        "apps/knowledgeBase-service-e2e/**/*",
        "**/*.e2e.test.ts",
        "**/*.e2e.spec.ts"
      ]
    },
    {
      "plugin": "@nx/jest/plugin",
      "include": ["**/*.e2e.test.ts", "**/*.e2e.spec.ts"],
      "options": {
        "targetName": "e2e",
        "ciTargetName": "e2e-ci"
      }
    },
    {
      "plugin": "@nx/docker",
      "options": {
        "buildTarget": "docker:build",
        "runTarget": "docker:run"
      }
    },
    {
      "plugin": "@nx/storybook/plugin",
      "options": {
        "serveStorybookTargetName": "serve:storybook",
        "buildStorybookTargetName": "build:storybook",
        "testStorybookTargetName": "test-storybook",
        "staticStorybookTargetName": "static-storybook",
        "buildDepsTargetName": "storybook:build-deps",
        "watchDepsTargetName": "storybook:watch-deps"
      }
    }
  ],
  "targetDefaults": {
    "@nx/js:tsc": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["default", "^default"]
    }
  },
  "generators": {
    "@nx/next": {
      "application": {
        "style": "tailwind",
        "linter": "eslint"
      }
    },
    "@nx/react": {
      "library": {
        "style": "tailwind",
        "linter": "eslint",
        "unitTestRunner": "vitest"
      },
      "application": {
        "babel": true,
        "style": "tailwind",
        "linter": "eslint",
        "bundler": "vite"
      },
      "component": {
        "style": "tailwind"
      }
    }
  }
}
